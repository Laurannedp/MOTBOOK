        <%= simple_form_for([@mot, @task]) do |f| %>
          <div class="row">
              <div class="col p-4">
                <%= f.input :name, label: 'Name', error: 'A name is mandatory, please specify one' %>
              </div>
              <div class="col p-4">
                <%= f.input :delay, label: 'Happening at MOT +/- ... days', error: 'A delay is mandatory, please specify one' %>
              </div>
              <div class="col p-4">
                <%= f.input :description, label: 'Description', error: 'A description is mandatory, please specify one' %>
              </div>
          </div>
            <div>
              <%= f.button :submit, class: "btn-primary" %>
            </div>
        <% end %>
      <hr class="my-4">
