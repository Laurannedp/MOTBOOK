<div class="container p-4">
  <h1>Here is your tasks of the week</h1>
</div>

<div id='tasks'>
  <% if tasks.any? %>
  <% tasks.each do |task| %>
  <div class="container border mt-2" data-controller="edittask" data-mot-id="<%= task.mot.id %>" data-task-id="<%= task.id %>" >
    <div class="row align-items-center p-3" data-target="edittask.wrapper">
      <div class="col-1 ">
        <% if task.delay > 0 %>
          <%= 'D+' + task.delay.to_s %>
        <% else %>
        <%=  'D' + task.delay.to_s %>
        <% end %>
      </div>
      <div class="col-1 " >
        <input type="checkbox" <%= task.completed == true ? "checked" : "" %> data-action="click->checktask#checkboxTask" data-mot-id="<%= task.mot.id %>" data-task-id="<%= task.id %>">
      </div>
      <a class="col-1 " data-toggle="collapse" href="#collapseExample-<%= task.id%>" role="button" aria-expanded="false" aria-controls="collapseExample">
       <i class="fas fa-caret-right"></i>
      </a>
      <div class="col-7 " data-toggle="tooltip" data-placement="top" title=<%= task.description %>>
        <%= task.name %>
      </div>
      <div class="col-1 " data-mot-id="<%= task.mot.id %>" data-task-id="<%= task.id %>">
       <i class="fas fa-edit" data-action="click->edittask#editTask"></i>
      </div>
      <div class="col-1" data-mot-id="<%= task.mot.id %>" data-task-id="<%= task.id %>">
       <i class="fa fa-trash" data-action="click->destroytask#destroyTask"></i>
      </div>
    </div>
  </div>
    <div class="collapse" id="collapseExample-<%= task.id%>" >
      <%= render "mots/show_mot_task_trigger.html.erb", task: task, mot: task.mot %>
    </div>
  <% end %>
  <% end %><hr class="my-4">


