
<div id=“tasks”>
              <% if mot.tasks.any? %>
              <% mot.tasks.each do |task| %>
              <div class="container border mt-2">
                <div class="row">
                  <div class="col-4 pt-4">
                    <%= task.name %>
                  </div>
                  <div class="col-2 pt-4">
                    <%= 'MOT - ' + task.delay.to_s + ' days' %>
                  </div>
                  <div class="col-4 pt-4">
                    <%= task.description %>
                  </div>
                  <div class="col-2 pt-4">
                <%= link_to "Edit", edit_mot_task_path(mot, task) %>
                  </div>
                </div>
              </div>
              <% end %>
              <% else %>
              <%= 'No task yet' %>
              <% end %>
            </div>
            <div >
              <%= link_to "New", new_mot_task_path(mot) %>
            </div>
          <hr class="my-4">
