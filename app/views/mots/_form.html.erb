<div class="container">
<hr class="my-4">
        <%= simple_form_for(@mot, remote: true) do |f| %>
          <div class="row">
              <div class="col p-4">
                <%= f.input :emoticon, collection: (128512..128561 ).to_a.map{|i| [i].pack("U")}, label: 'Emoticon', error: 'Description is mandatory, please specify one' %>
              </div>
              <div class="col p-4">
                <%= f.input :name, label: 'Name', error: 'Description is mandatory, please specify one' %>
              </div>
          </div>
        <% end %>
<hr class="my-4">
</div>
