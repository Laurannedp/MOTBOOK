<% if task.triggers.any? %>
<% task.triggers.each do |trigger| %>
<div class="container border mt-2" data-controller="edittrigger" data-mot-id="<%= mot.id %>" data-task-id="<%= task.id %>" data-trigger-id="<%= trigger.id %>">
  <div class="row" data-target="edittrigger.wrapper">
    <div class="col-6 p-4">
      trigger: <%= trigger.name %>
    </div>
    <div class="col-4 p-4" style="btn-primary">
      <%= trigger.url %>
    </div>
    <div class="col-2 pt-4">
      <div class="flex-center mt-4" data-mot-id="<%= mot.id %>" data-task-id="<%= task.id %>" data-trigger-id="<%= trigger.id %>">
       <i class="fas fa-edit" data-action="click->edittrigger#editTrigger"></i>
      </div>
    </div>
  </div>
</div>
<% end %>
<% else %>
<strong>No trigger yet</strong>
<% end %>
<div data-controller="newtrigger" data-task-id="<%= task.id %>" data-mot-id="<%= mot.id %>">
<div class="flex-center mt-4">
       <p data-action="click->newtrigger#createTrigger"><i class="fas fa-plus"></i> Add a Trigger</p>
</div>
  <div data-target='newtrigger.wrapper'></div>
</div>
